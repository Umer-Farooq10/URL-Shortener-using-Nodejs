<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page | Urls</title>
    <style>
        body {
            font-family: 'Nobile', Helvetica, Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            position: relative;
        }

        h1 {
            color: #3F3F3F;
            font-family: 'Corben', Georgia, Times, serif;
            font-size: 48px;
            margin-bottom: 32px;
            text-align: center;
        }

        p {
            color: #3F3F3F;
            font-family: 'Corben', Georgia, Times, serif;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 16px;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 1px solid #3F3F3F;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
            width: 300px;
            margin: 0 auto;
            background-color: #fff;
            /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); */
        }

        label {
            color: #3F3F3F;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #3F3F3F;
            background-color: #e5e5e5;
            font-size: 18px;
        }

        input[type="submit"] {
            background-color: #3F3F3F;
            color: #FFFFFF;
            font-size: 18px;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 0;
        }

        input[type=" submit"]:hover {
            background-color: #171717;
        }

        a {
            background-color: #3F3F3F;
            color: #FFFFFF;
            font-size: 18px;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            position: absolute;
            right: 100px;
        }

        a:hover {
            background-color: #171717;
        }

        #table_wrapper {
            width: 60%;
            margin: auto;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 5px;
            margin-top: 30px;
            text-align: center;
        }

        table tr th {
            color: #3F3F3F;
            font-size: 18px;
            border-bottom: 1px solid #3F3F3F;
            padding: 4px;
            background-color: #f5f5f5;
        }

        table tr td {
            color: #3F3F3F;
            font-size: 18px;
            padding: 4px;
            vertical-align: top;
        }

        table tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        @media (max-width: 768px) {
            #table_wrapper {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <a href="/api/users/logout">Logout</a>

    <h1>URL Shortener</h1>

    <% if (locals.id) { %>
     <p>URL Generated http://localhost:3000/<%= id %> </p>
    <% } %>

    <form method="post" action="/api/urls">
        <label>Enter URL:</label>
        <input type="text" name="originalUrl" placeholder="https://example.com">
        <input type="submit" value="Generate" />
    </form>
    <br>
    <div id="table_wrapper">
        <% if (locals.urls) { %>
        <table border="1">
            <tr>
                <th>SNo</th>
                <th>Original URL</th>
                <th>ShortId</th>
                <th>Visitors</th>
            </tr>
            <% urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= url.originalUrl %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.visitorsHistory.length %></td>
                </tr>
            <% }) %>
        </table>
        <% } %>
    </div>
</body>
</html>
